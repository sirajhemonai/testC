{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2020",
    "lib": ["ES2020"],
    "outDir": "../dist/api",
    "rootDir": "../",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "noEmit": false,
    "isolatedModules": false,
    "moduleResolution": "node",
    "paths": {
      "@/*": ["../client/src/*"],
      "@shared/*": ["../shared/*"]
    }
  },
  "include": ["./**/*.ts", "../server/**/*.ts", "../shared/**/*.ts"],
  "exclude": ["node_modules"]
}